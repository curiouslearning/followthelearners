html
  include mixins/_campaign
  head
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.css')
  body
    .section
      .containers
        .container
          .div
            ul.list
              each campaign in campaigns
                +campaign(campaign.country, campaign.imgRef, campaign.body, campaign.donateRef)
        br
        .container
          form(method='GET', action='/summary')
            .help Go to your Donor Summary
            .control
              label(for='[e]') E-mail
              input.input(name='[e]', type = 'text', title="Email" placeholder ='user@gmail.com')
            .control
              button.button.is-primary View Summary
